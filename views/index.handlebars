<div class="container">
    <div class="jumbotron">
        <img  src="/public/assets/img/burger.jpg" class="img-circle" >
        <h2> Eat-Da-Burger! </h2>
</div>

{{!-- burger before eating --}}
<div class="row">
    <div class="col-md-4 col-md-offset-1">
        <div class="panel-panel default">
            <ul class="list-group">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li class="list-group-item">
                            <div class="input-group">
                                <p class="lead"> {{this.burger_name}} </p>
                                <span class="input-group-btn">
							        <form action="/{{this.id}}?_method=PUT" method="POST">
								       <input type="hidden" name="devoured" value="true">
								       <button class="btn btn-default btn-lg" type="submit"> EAT IT! </button>
							        </form>
						         </span>
                            </div>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>


{{!-- burger after eating --}}
<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <div class="panel panel-default">
            <ul class="list-group">
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li class="list-group-item">
                            <p class="lead">{{this.burger_name}} </p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="col-md-10 col-md-offset-1">
    <p class="enter"> Enter the name of a burger you desire... </p>

    {{!-- add burgers --}}
    <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
            <textarea class="form-control input-sm" type="text" name="burger_name" rows="3" > </textarea>

        </div>

        <center><button class="btn btn-default btn-lg" type="submit">Add Burger!</button></center>
    </form>
</div>

</div>